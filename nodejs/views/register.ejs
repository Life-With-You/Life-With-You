<%- include('./componest/haed') %> 
<div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 ">
        <div class="panel panel-default">

            <div class="panel-body">
                <form action="/register" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label for="username">请输入用户名</label>
                        <input type="text" class="form-control" name="username" id="username" placeholder="Username">
                    </div>

                    <div class="form-group">
                        <label for="username">请输入密码</label>
                        <input type="password" class="form-control" name="password" id="password" placeholder="Password">
                    </div>

                    <div class="form-group">
                        <label for="avatar">请上传头像</label>
                        <input type="file" id="avatar" name="avatar">
                    </div>

                    <div class="form-group">
                        <label for="gender">请选择性别</label>
                        <select class="form-control" id="gender" name="gender" required>
                            <option value="m">男</option>
                            <option value="f">女</option>
                            <option value="s">保密</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="profile">请输入个人简介</label>
                        <textarea type="text" rows="3" class="form-control" id="profile" name="profile"
                                  placeholder="profile"></textarea>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-info form-control">注册</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('./componest/footer') %> 