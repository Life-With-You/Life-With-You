<%- include('./componest/haed') %>

<div class="row ">
    <div class="col-xs-2">
        <a href="">
            <img src="/uploads/<%= user.avatar %>" alt="..." class="img-circle shadow" width="60" data-toggle="tooltip"
                 data-placement="bottom" title="<%= user.username %>">
        </a>
    </div>
    <div class="col-xs-8">
        <div class="panel panel-default shadow">
            <div class="panel-body">
                <form about="" method="POST">
                    <div class="form-group">
                        <label for="title">标题</label>
                        <input type="text" class="form-control" id="title" name="title" placeholder="标题">
                    </div>
                    <div class="form-group">
                        <label for="content">内容</label>
                        <textarea  class="form-control" rows="8" name="content" id="content" placeholder="内容"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary  btn-block">发布</button>
                </form>
            </div>

        </div>
    </div>
</div>

